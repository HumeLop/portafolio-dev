---
import { socialLinks } from "../data/portfolio";
---

<!-- Footer - Gaming Style -->
<footer class="bg-slate-950 border-t-2 md:border-t-3 border-cyan-400/30 py-8 md:py-12 relative">
  <!-- Pixel grid background -->
  <div class="absolute inset-0 pixel-grid opacity-10"></div>

  <div class="max-w-6xl mx-auto px-4 relative z-10">
    <!-- Social Links - Pixel Style -->
    <div class="flex justify-center gap-3 md:gap-4 mb-6 md:mb-8">
      {socialLinks.map(link => (
        <a
          href={link.url}
          target={link.url.startsWith('http') ? "_blank" : undefined}
          class="w-10 h-10 md:w-12 md:h-12 bg-blue-950 border-2 md:border-3 border-blue-500 hover:border-cyan-400 flex items-center justify-center transition hover:scale-110 group pixel-border"
          aria-label={link.name}
        >
          <span class="text-blue-400 group-hover:text-cyan-400 transition text-lg md:text-xl">
            {link.icon}
          </span>
        </a>
      ))}
    </div>

    <!-- Divider -->
    <div
      class="w-full h-1 bg-linear-to-r from-transparent via-cyan-400/50 to-transparent mb-4 md:mb-6"
    >
    </div>

    <!-- Copyright & Info -->
    <div class="text-center space-y-1 md:space-y-2">
      <p class="mono-font text-cyan-400 text-xs md:text-sm font-bold">
        {'>'} PORTFOLIO.EXE v2.0.1
      </p>
      <p class="mono-font text-blue-400 text-[10px] md:text-xs">
        Â© {new Date().getFullYear()} - Crafted with Astro + Tailwind CSS
      </p>
      <p class="mono-font text-slate-600 text-[10px] md:text-xs">
        Last Build: <span class="text-blue-500">{new Date().toISOString().split('T')[0]}</span>
      </p>
    </div>

    <!-- Game Over Message -->
    <div class="mt-6 md:mt-8 flex justify-center">
      <div
        class="pixel-font text-[10px] md:text-xs text-cyan-400/50 border-2 border-cyan-400/20 px-3 py-2 md:px-4 blink"
      >
        THANK YOU FOR PLAYING
      </div>
    </div>
  </div>
</footer>