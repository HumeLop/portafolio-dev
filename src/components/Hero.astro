---
import { mainStats, personalInfo, socialLinks, specialSkills } from '../data/portfolio'
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center pt-20 px-4 relative overflow-hidden bg-linear-to-b from-slate-950 via-blue-950 to-slate-950 text-white"
>
  <!-- Pixel grid background -->
  <div class="absolute inset-0 pixel-grid opacity-30"></div>

  <!-- Animated stars/particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {
      [...Array(6)].map((_, i) => (
        <div
          class={`absolute rounded-full animate-pulse ${i % 2 === 0 ? 'w-2 h-2 bg-cyan-400' : 'w-1 h-1 bg-blue-300'}`}
          style={{
            top: `${Math.random() * 100}%`,
            left: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 2}s`,
          }}
        />
      ))
    }
  </div>

  <div class="max-w-6xl w-full relative z-10 animate-fade-in animate-duration-slow">
    <!-- Gaming Retro Container -->
    <div class="relative">
      <!-- Shadow layer -->
      <div class="absolute inset-0 border-4 border-cyan-400 translate-x-2 translate-y-2 rounded-lg"></div>
      <!-- Main container -->
      <div class="bg-blue-900/40 backdrop-blur-sm border-4 border-cyan-400 rounded-lg p-6 md:p-12 lg:p-16 relative">
        <!-- Decorative corner elements -->
        <div class="absolute top-4 left-4 w-8 h-8 border-l-4 border-t-4 border-cyan-400"></div>
        <div class="absolute top-4 right-4 w-8 h-8 border-r-4 border-t-4 border-cyan-400"></div>
        <div class="absolute bottom-4 left-4 w-8 h-8 border-l-4 border-b-4 border-cyan-400"></div>
        <div class="absolute bottom-4 right-4 w-8 h-8 border-r-4 border-b-4 border-cyan-400"></div>

        <div>
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left: Character Avatar with Pixel Border -->
          <div class="relative animate-slide-in-left">
            <div
              class="bg-blue-950 border-3 md:border-4 border-blue-500 p-4 md:p-8 relative pixel-border"
            >
              <!-- Corner decorations - pixel style -->
              <div class="absolute top-0 left-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute top-0 right-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute bottom-0 left-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute bottom-0 right-0 w-4 h-4 bg-cyan-400"></div>

              <!-- Avatar - pixel art style -->
              <div
                class="w-full aspect-square bg-linear-to-br from-blue-600 to-purple-700 flex items-center justify-center text-6xl md:text-9xl mb-4 md:mb-6 relative overflow-hidden"
              >
                <div class="absolute inset-0 pixel-grid opacity-20"></div>
                <span class="">üë®‚Äçüíª</span>
              </div>

              <!-- Player Profile Card -->
              <div
                class="bg-slate-950 border-2 md:border-3 border-blue-500 p-4 md:p-6 pixel-border animate-slide-in-bottom"
                style="animation-delay: 300ms;"
              >
                <h3 class="pixel-font text-xs md:text-sm text-cyan-400 mb-3 md:mb-4">
                  ‚ö° PLAYER PROFILE
                </h3>
                <div class="space-y-2 md:space-y-3 mono-font text-xs md:text-sm">
                  <div class="flex justify-between items-center">
                    <span class="text-blue-300">CLASS</span>
                    <span class="text-white font-bold">Fullstack Developer</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-blue-300">LEVEL</span>
                    <span class="text-cyan-400 font-bold text-lg">{personalInfo.level}</span>
                  </div>
                  <div class="w-full">
                    <div class="flex justify-between mb-1 text-xs">
                      <span class="text-blue-300">XP</span>
                      <span class="text-cyan-400"
                        >{personalInfo.xp.current.toLocaleString()} / {
                          personalInfo.xp.total.toLocaleString()
                        }</span
                      >
                    </div>
                    <div class="stat-bar border-blue-400">
                      <div
                        class="stat-bar-fill animate-pulse"
                        style={`width: ${(personalInfo.xp.current / personalInfo.xp.total) * 100}%`}
                      >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Links - Gaming Style -->
            <div class="mt-4 md:mt-6 animate-slide-in-bottom" style="animation-delay: 500ms;">
               <div class="text-center pixel-font text-xs md:text-sm text-blue-400 mb-3 md:mb-4">
                 ‚ñº SOCIAL LINKS ‚ñº
               </div>
              <div class="flex justify-center gap-2 md:gap-4">
                {
                  socialLinks.map(link => (
                    <a
                      href={link.url}
                      target={link.url.startsWith('http') ? '_blank' : undefined}
                      class="w-14 h-14 md:w-16 md:h-16 bg-blue-950 border-2 md:border-3 border-blue-500 hover:border-cyan-400 flex items-center justify-center text-xl md:text-2xl transition-all hover:scale-110 hover:shadow-lg hover:shadow-cyan-400/50 pixel-border"
                    >
                      <span class="text-cyan-400">{link.icon}</span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Right: Bio and Stats - Gaming Style -->
          <div class="space-y-6 animate-slide-in-right">
            <!-- Status Badge -->
            <div class="inline-block">
              <div class="level-badge pulse-glow">
                <span class="flex items-center gap-2">
                  <span class="w-2 h-2 bg-green-400 rounded-full blink"></span>
                  AVAILABLE FOR WORK
                </span>
              </div>
            </div>

            <!-- Name - Pixel Art Style -->
            <div class="animate-slide-in-top" style="animation-delay: 200ms;">
              <h1
                class="pixel-font text-2xl md:text-3xl lg:text-4xl text-cyan-400 mb-2 leading-tight"
              >
                {personalInfo.name}
                <br />
                <span class="text-blue-400">{personalInfo.lastName}</span>
              </h1>
              <p class="mono-font text-cyan-300 text-xs md:text-sm font-bold">
                {'>'}
                {personalInfo.role}
              </p>
              <div class="w-full h-1 bg-linear-to-r from-cyan-400 via-blue-400 to-transparent mt-2">
              </div>
            </div>

            <!-- Bio Log - Gaming Terminal Style -->
            <div
              class="bg-blue-900/30 border-l-3 md:border-l-4 border-cyan-400 p-4 md:p-6 backdrop-blur-sm animate-fade-in"
              style="animation-delay: 400ms;"
            >
               <h3 class="pixel-font text-xs md:text-sm text-cyan-400 mb-2 md:mb-3">
                 ‚ö° BIO_LOG.TXT
               </h3>
              <p class="mono-font text-cyan-200 text-sm md:text-base leading-relaxed">
                {'>'}
                {personalInfo.bio}
              </p>
            </div>

            <!-- Main Skills - Gaming RPG Style -->
            <div
              class="animate-slide-in-bottom"
              style="animation-delay: 600ms;"
            >
              <h4
                class="pixel-font text-xs md:text-sm text-cyan-400 mb-3 md:mb-4 flex items-center gap-2"
              >
                <span class="w-2 h-2 md:w-3 md:h-3 bg-cyan-400"></span>
                SKILLS UNLOCKED
              </h4>

              <div class="grid grid-cols-2 gap-4">
                {
                  mainStats.map((stat, index) => (
                    <div class="relative">
                      {/* Borde retro */}
                      <div class="absolute inset-0 border-2 border-cyan-400 translate-x-1 translate-y-1"></div>
                      <div class="bg-blue-900/80 border-2 border-cyan-400 p-3 relative">
                        {/* Icono */}
                        <div class="absolute -top-3 -right-3 w-8 h-8 bg-cyan-400 flex items-center justify-center text-base font-bold text-blue-900">
                          {index === 0 ? '‚öîÔ∏è' : index === 1 ? 'üîÆ' : index === 2 ? '‚ö°' : '‚òï'}
                        </div>
                        <div class="flex flex-col">
                          <span class="pixel-font text-sm text-cyan-300 mb-2">{stat.name}</span>
                          <div class="flex gap-1 mb-2 justify-center">
                            {[...Array(5)].map((_, i) => (
                              <span class={`text-sm ${i < stat.level ? 'text-yellow-300' : 'text-blue-700'}`}>‚òÖ</span>
                            ))}
                          </div>
                          <div class="text-center">
                            <span class="mono-font text-[10px] text-yellow-300 font-bold border border-yellow-300 px-2 py-1">LVL: {stat.label}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))
                }
                {
                  specialSkills.map((skill, index) => (
                    <div class="relative">
                      {/* Borde retro */}
                      <div class="absolute inset-0 border-2 border-purple-400 translate-x-1 translate-y-1"></div>
                      <div class="bg-purple-900/80 border-2 border-purple-400 p-3 relative">
                        {/* Icono */}
                        <div class="absolute -top-3 -right-3 w-8 h-8 bg-purple-400 flex items-center justify-center text-base font-bold text-purple-900">
                          {index === 0 ? 'üóÑÔ∏è' : 'üêç'}
                        </div>
                        <div class="flex flex-col">
                          <span class="pixel-font text-sm text-purple-300 mb-2">{skill.name}</span>
                          <div class="flex gap-1 mb-2 justify-center">
                            {[...Array(5)].map((_, i) => (
                              <span class={`text-sm ${i < skill.level ? 'text-yellow-300' : 'text-purple-700'}`}>‚òÖ</span>
                            ))}
                          </div>
                          <div class="text-center">
                            <span class="mono-font text-[10px] text-yellow-300 font-bold border border-yellow-300 px-2 py-1">LVL: {skill.label}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))
                }
              </div>
            </div>

            <!-- Inventory (Tech Stack) - Pixel Icons -->
            <div class="animate-slide-in-bottom" style="animation-delay: 800ms;">
              <h4
                class="pixel-font text-xs md:text-sm text-cyan-400 mb-3 md:mb-4 flex items-center gap-2"
              >
                <span class="w-2 h-2 md:w-3 md:h-3 bg-cyan-400"></span>
                INVENTORY (TECH STACK)
              </h4>
              <div class="flex flex-wrap gap-2 md:gap-3">
                {
                  ['JAVA SPRING', 'TS', 'JS', 'ANGULAR', 'REACT', 'PY', 'APEX ORACLE', 'DB'].map(
                    tech => (
                      <div class="w-16 h-16 md:w-20 md:h-20 bg-blue-950 border-2 md:border-3 border-blue-500 hover:border-cyan-400 flex items-center justify-center mono-font text-xs md:text-sm transition-all cursor-pointer hover:scale-110 hover:shadow-lg hover:shadow-cyan-400/50 font-bold text-cyan-400 text-center leading-tight pixel-border">
                        {tech.includes(' ') ? (
                          <>
                            {tech.split(' ')[0]}
                            <br />
                            {tech.split(' ')[1]}
                          </>
                        ) : (
                          tech
                        )}
                      </div>
                    )
                  )
                }
              </div>
            </div>

            <!-- CTA Button - Press Start Style -->
            <div
              class="pt-4 animate-bounce-in animate-duration-slow"
              style="animation-delay: 1000ms;"
            >
              <a
                href="#contact"
                class="inline-block pixel-button text-xs md:text-sm px-6 py-3 hover:animate-jelly"
              >
                ‚ñ∂ START NEW QUEST (CONTACT)
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
