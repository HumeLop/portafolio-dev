---
import { mainStats, personalInfo, socialLinks, specialSkills } from '../data/portfolio'
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center pt-20 px-4 relative overflow-hidden bg-linear-to-b from-slate-950 via-blue-950 to-slate-950 text-white"
>
  <!-- Pixel grid background -->
  <div class="absolute inset-0 pixel-grid opacity-30"></div>

  <!-- Animated stars/particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {
      [...Array(6)].map((_, i) => (
        <div
          class={`absolute rounded-full animate-pulse ${i % 2 === 0 ? 'w-2 h-2 bg-cyan-400' : 'w-1 h-1 bg-blue-300'}`}
          style={{
            top: `${Math.random() * 100}%`,
            left: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 2}s`,
          }}
        />
      ))
    }
  </div>

  <div class="max-w-6xl w-full relative z-10 animate-fade-in animate-duration-slow">
    <div
      class="bg-linear-to-br from-blue-100 to-cyan-50 relative overflow-hidden rounded-2xl border-3 md:border-4 border-blue-500 notebook-shadow animate-zoom-in"
    >
      <!-- Spiral rings at top -->
      <div class="notebook-holes-top bg-blue-900 border-b border-blue-700">
        {[...Array(10)].map(() => <div class="spiral-ring" />)}
      </div>

      <!-- Blue margin line -->
      <div class="absolute left-20 top-16 bottom-0 notebook-line opacity-50"></div>

      <div class="grid-paper p-6 md:p-12 lg:p-16 pt-16 md:pt-24 relative">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left: Character Avatar with Pixel Border -->
          <div class="relative animate-slide-in-left">
            <div
              class="bg-blue-950 border-3 md:border-4 border-blue-500 p-4 md:p-8 relative pixel-border"
            >
              <!-- Corner decorations - pixel style -->
              <div class="absolute top-0 left-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute top-0 right-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute bottom-0 left-0 w-4 h-4 bg-cyan-400"></div>
              <div class="absolute bottom-0 right-0 w-4 h-4 bg-cyan-400"></div>

              <!-- Avatar - pixel art style -->
              <div
                class="w-full aspect-square bg-linear-to-br from-blue-600 to-purple-700 flex items-center justify-center text-6xl md:text-9xl mb-4 md:mb-6 relative overflow-hidden"
              >
                <div class="absolute inset-0 pixel-grid opacity-20"></div>
                <span class="">üë®‚Äçüíª</span>
              </div>

              <!-- Player Profile Card -->
              <div
                class="bg-slate-950 border-2 md:border-3 border-blue-500 p-4 md:p-6 pixel-border animate-slide-in-bottom"
                style="animation-delay: 300ms;"
              >
                <h3 class="pixel-font text-[10px] md:text-xs text-cyan-400 mb-3 md:mb-4">
                  ‚ö° PLAYER PROFILE
                </h3>
                <div class="space-y-2 md:space-y-3 mono-font text-xs md:text-sm">
                  <div class="flex justify-between items-center">
                    <span class="text-blue-300">CLASS</span>
                    <span class="text-white font-bold">Fullstack Developer</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-blue-300">LEVEL</span>
                    <span class="text-cyan-400 font-bold text-lg">{personalInfo.level}</span>
                  </div>
                  <div class="w-full">
                    <div class="flex justify-between mb-1 text-xs">
                      <span class="text-blue-300">XP</span>
                      <span class="text-cyan-400"
                        >{personalInfo.xp.current.toLocaleString()} / {
                          personalInfo.xp.total.toLocaleString()
                        }</span
                      >
                    </div>
                    <div class="stat-bar border-blue-400">
                      <div
                        class="stat-bar-fill animate-pulse"
                        style={`width: ${(personalInfo.xp.current / personalInfo.xp.total) * 100}%`}
                      >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Links - Gaming Style -->
            <div class="mt-4 md:mt-6 animate-slide-in-bottom" style="animation-delay: 500ms;">
              <div class="text-center pixel-font text-[10px] md:text-xs text-blue-400 mb-3 md:mb-4">
                ‚ñº SOCIAL LINKS ‚ñº
              </div>
              <div class="flex justify-center gap-2 md:gap-4">
                {
                  socialLinks.map(link => (
                    <a
                      href={link.url}
                      target={link.url.startsWith('http') ? '_blank' : undefined}
                      class="w-12 h-12 md:w-14 md:h-14 bg-blue-950 border-2 md:border-3 border-blue-500 hover:border-cyan-400 flex items-center justify-center text-lg md:text-xl transition-all hover:scale-110 hover:shadow-lg hover:shadow-cyan-400/50 pixel-border"
                    >
                      <span class="text-cyan-400">{link.icon}</span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Right: Bio and Stats - Gaming Style -->
          <div class="space-y-6 animate-slide-in-right">
            <!-- Status Badge -->
            <div class="inline-block">
              <div class="level-badge pulse-glow">
                <span class="flex items-center gap-2">
                  <span class="w-2 h-2 bg-green-400 rounded-full blink"></span>
                  AVAILABLE FOR WORK
                </span>
              </div>
            </div>

            <!-- Name - Pixel Art Style -->
            <div class="animate-slide-in-top" style="animation-delay: 200ms;">
              <h1
                class="pixel-font text-2xl md:text-3xl lg:text-4xl text-slate-900 mb-2 leading-tight"
              >
                {personalInfo.name}
                <br />
                <span class="text-blue-600">{personalInfo.lastName}</span>
              </h1>
              <p class="mono-font text-blue-800 text-xs md:text-sm font-bold">
                {'>'}
                {personalInfo.role}
              </p>
              <div class="w-full h-1 bg-linear-to-r from-blue-500 via-cyan-400 to-transparent mt-2">
              </div>
            </div>

            <!-- Bio Log - Gaming Terminal Style -->
            <div
              class="bg-blue-900/10 border-l-3 md:border-l-4 border-blue-500 p-4 md:p-6 backdrop-blur-sm animate-fade-in"
              style="animation-delay: 400ms;"
            >
              <h3 class="pixel-font text-[10px] md:text-xs text-blue-600 mb-2 md:mb-3">
                ‚ö° BIO_LOG.TXT
              </h3>
              <p class="mono-font text-slate-800 text-sm md:text-base leading-relaxed">
                {'>'}
                {personalInfo.bio}
              </p>
            </div>

            <!-- Main Stats - Gaming RPG Style -->
            <div
              class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 animate-slide-in-bottom"
              style="animation-delay: 600ms;"
            >
              <div>
                <h4
                  class="pixel-font text-[10px] md:text-xs text-blue-600 mb-3 md:mb-4 flex items-center gap-2"
                >
                  <span class="w-2 h-2 md:w-3 md:h-3 bg-blue-500"></span>
                  MAIN STATS
                </h4>

                <div class="space-y-3 md:space-y-4">
                  {
                    mainStats.map(stat => (
                      <div>
                        <div class="flex justify-between mb-2 mono-font text-xs">
                          <span class="text-blue-700">{stat.name}</span>
                          <span class="text-blue-600 font-bold">LVL {stat.level}</span>
                        </div>
                        <div class="stat-bar border-blue-400">
                          <div class="stat-bar-fill" style={`width: ${stat.level}%`} />
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4
                  class="pixel-font text-[10px] md:text-xs text-purple-600 mb-3 md:mb-4 flex items-center gap-2"
                >
                  <span class="w-2 h-2 md:w-3 md:h-3 bg-purple-500"></span>
                  SPECIAL SKILLS
                </h4>

                <div class="space-y-3 md:space-y-4">
                  {
                    specialSkills.map(skill => (
                      <div>
                        <div class="flex justify-between mb-2 mono-font text-xs">
                          <span class="text-blue-700">{skill.name}</span>
                          <span class="text-blue-600 font-bold">LVL {skill.level}</span>
                        </div>
                        <div class="stat-bar border-blue-400">
                          <div class="stat-bar-fill" style={`width: ${skill.level}%`} />
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>
            </div>

            <!-- Inventory (Tech Stack) - Pixel Icons -->
            <div class="animate-slide-in-bottom" style="animation-delay: 800ms;">
              <h4
                class="pixel-font text-[10px] md:text-xs text-blue-600 mb-3 md:mb-4 flex items-center gap-2"
              >
                <span class="w-2 h-2 md:w-3 md:h-3 bg-blue-500"></span>
                INVENTORY (TECH STACK)
              </h4>
              <div class="flex flex-wrap gap-2 md:gap-3">
                {
                  ['JAVA SPRING', 'TS', 'JS', 'ANGULAR', 'REACT', 'PY', 'APEX ORACLE', 'DB'].map(
                    tech => (
                      <div class="w-12 h-12 md:w-14 md:h-14 bg-blue-950 border-2 md:border-3 border-blue-500 hover:border-cyan-400 flex items-center justify-center mono-font text-[8px] md:text-[10px] transition-all cursor-pointer hover:scale-110 hover:shadow-lg hover:shadow-cyan-400/50 font-bold text-cyan-400 text-center leading-tight pixel-border">
                        {tech.includes(' ') ? (
                          <>
                            {tech.split(' ')[0]}
                            <br />
                            {tech.split(' ')[1]}
                          </>
                        ) : (
                          tech
                        )}
                      </div>
                    )
                  )
                }
              </div>
            </div>

            <!-- CTA Button - Press Start Style -->
            <div
              class="pt-4 animate-bounce-in animate-duration-slow"
              style="animation-delay: 1000ms;"
            >
              <a
                href="#contact"
                class="inline-block pixel-button text-xs md:text-sm px-6 py-3 hover:animate-jelly"
              >
                ‚ñ∂ START NEW QUEST (CONTACT)
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
