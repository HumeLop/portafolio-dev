---
import { education, experience, personalInfo, skills } from '../data/portfolio'
---

<section
  id="experience"
  class="min-h-screen bg-linear-to-br from-slate-950 via-blue-950 to-slate-950 py-20 px-4 relative flex items-center justify-center"
>
  <!-- Pixel grid background -->
  <div class="absolute inset-0 pixel-grid opacity-20"></div>

  <div class="max-w-7xl w-full relative z-10">
    <!-- Gaming Retro Container -->
    <div class="relative">
      <!-- Shadow layer -->
      <div class="absolute inset-0 border-4 border-cyan-400 translate-x-2 translate-y-2 rounded-lg"></div>
      <!-- Main container -->
      <div class="bg-blue-900/40 backdrop-blur-sm border-4 border-cyan-400 rounded-lg p-6 md:p-12 relative">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Left: Quest Log / Experience -->
          <div class="lg:col-span-2 space-y-8">
            <!-- Experience -->
            <div>
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-14 h-14 bg-cyan-500 flex items-center justify-center text-2xl pixel-border"
                >
                  <span>üó∫Ô∏è</span>
                </div>
                <h2 class="pixel-font text-lg md:text-xl text-cyan-400">QUEST_LOG.EXE</h2>
              </div>

              <div class="space-y-6">
                {
                  experience.map(item => (
                    <div
                      class={`border-l-4 pl-6 relative p-4 bg-blue-950/60 border-2 ${item.current ? 'border-cyan-400 shadow-lg shadow-cyan-400/20' : 'border-blue-700'}`}
                    >
                      <div
                        class={`absolute -left-2.75 top-6 w-5 h-5 border-2 border-cyan-400 ${item.current ? 'bg-cyan-400 pulse-glow' : 'bg-blue-700'}`}
                      />

                      <div class="mb-3 flex items-center gap-3">
                        <div
                          class={`w-8 h-8 flex items-center justify-center text-base border-2 ${item.current ? 'bg-cyan-400 border-cyan-300 text-blue-900' : 'bg-blue-800 border-blue-600 text-cyan-300'}`}
                        >
                          <span>{item.current ? 'üõ°Ô∏è' : 'üíª'}</span>
                        </div>
                        <span
                          class={`px-3 py-1 text-[10px] mono-font font-bold border-2 ${item.current ? 'bg-cyan-400 text-blue-900 border-cyan-300' : 'bg-blue-800 text-cyan-300 border-blue-600'}`}
                        >
                          {item.current ? 'CURRENT' : 'COMPLETED'}
                        </span>
                      </div>

                      <h3 class="pixel-font text-sm md:text-base text-cyan-300 mb-1">
                        {item.role}
                      </h3>
                      <p class="mono-font text-xs text-cyan-400 mb-3 font-bold">
                        {'>'} {item.company} ‚Ä¢ {item.period}
                      </p>
                      <p class="text-blue-200 text-sm leading-relaxed mono-font">
                        {item.description}
                      </p>
                      <p class="text-cyan-300 text-[10px] md:text-xs mt-3 mono-font font-bold">
                        {'>'} {item.skills}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>

            <!-- Education -->
            <div class="pt-8">
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-14 h-14 bg-purple-500 flex items-center justify-center text-2xl pixel-border"
                >
                  <span>üéì</span>
                </div>
                <h2 class="pixel-font text-lg md:text-xl text-purple-400">EDUCATION_LOG.EXE</h2>
              </div>

              <div class="space-y-6">
                {
                  education.map((item, index) => (
                    <div
                      class={`border-l-4 pl-6 relative p-4 bg-purple-950/60 border-2 ${index === 0 ? 'border-purple-400 shadow-lg shadow-purple-400/20' : 'border-purple-700'}`}
                    >
                      <div
                        class={`absolute -left-2.75 top-6 w-5 h-5 border-2 border-purple-400 ${index === 0 ? 'bg-purple-400' : 'bg-purple-700'}`}
                      />

                      <div class="mb-3 flex items-center gap-3">
                        <div class="w-8 h-8 bg-purple-400 border-2 border-purple-300 flex items-center justify-center text-base text-purple-900">
                          <span>{index === 0 ? 'üìö' : 'üìñ'}</span>
                        </div>
                        <span class="bg-purple-400 text-purple-900 px-3 py-1 text-[10px] mono-font font-bold border-2 border-purple-300">
                          {item.level}
                        </span>
                      </div>

                      <h3 class="pixel-font text-sm md:text-base text-purple-300 mb-1">
                        {item.degree}
                      </h3>
                      <p class="mono-font text-xs text-purple-400 mb-2 font-bold">
                        {'>'} {item.institution} ‚Ä¢ {item.period}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Right: Contact & Skills Column -->
          <div class="space-y-10">
            <!-- Skills & Certifications -->
            <div class="relative">
              <div class="absolute inset-0 border-4 border-emerald-400 translate-x-1 translate-y-1 rounded-lg"></div>
              <div class="bg-emerald-950/40 border-4 border-emerald-400 rounded-lg p-6 relative">
                <div class="flex items-center gap-3 mb-8">
                  <div
                    class="w-14 h-14 bg-emerald-400 flex items-center justify-center text-2xl pixel-border"
                  >
                    <span>‚ö°</span>
                  </div>
                  <h2 class="pixel-font text-lg md:text-xl text-emerald-400">SKILLS.EXE</h2>
                </div>

                <div class="mb-8">
                  <h3 class="pixel-font text-xs md:text-sm text-emerald-400 mb-4">{'>'} MAIN_SKILLS</h3>
                  <div class="space-y-3">
                    {
                      skills.main.map(skill => (
                        <div class="flex items-center gap-3">
                          <div class="w-3 h-3 bg-emerald-400" />
                          <span class="mono-font text-emerald-200 text-sm font-bold">{skill}</span>
                        </div>
                      ))
                    }
                  </div>
                </div>

                <div>
                  <h3 class="pixel-font text-xs md:text-sm text-emerald-400 mb-4">{'>'} CERTIFICATIONS</h3>
                  <div class="space-y-2">
                    {
                      skills.certifications.map(cert => (
                        <div class="bg-emerald-900/50 border-l-4 border-emerald-400 p-2">
                          <p class="mono-font text-emerald-300 text-xs font-bold">{cert}</p>
                        </div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="relative">
              <div class="absolute inset-0 border-4 border-cyan-400 translate-x-1 translate-y-1 rounded-lg"></div>
              <div class="bg-blue-950/40 border-4 border-cyan-400 rounded-lg p-6 relative">
                <div class="flex items-center gap-3 mb-8">
                  <div
                    class="w-14 h-14 bg-cyan-400 flex items-center justify-center text-2xl pixel-border"
                  >
                    <span>üìù</span>
                  </div>
                  <h2 class="pixel-font text-lg md:text-xl text-cyan-400">CONTACT.EXE</h2>
                </div>

                <div class="space-y-3 mb-8 bg-blue-900/50 p-4 border-2 border-cyan-400/50">
                  <div class="flex items-center gap-3 text-cyan-300 mono-font text-xs font-bold">
                    <span>üìß</span>
                    <span>{personalInfo.email}</span>
                  </div>
                  <div class="flex items-center gap-3 text-cyan-300 mono-font text-xs font-bold">
                    <span>üìç</span>
                    <span>{personalInfo.location}</span>
                  </div>
                </div>

                <form class="space-y-6">
                  <div>
                     <label class="block pixel-font text-xs md:text-sm text-cyan-400 mb-2 font-bold"
                      >{'>'} PLAYER_NAME</label
                    >
                    <input
                      type="text"
                      placeholder="Enter your name..."
                      class="w-full bg-blue-900/50 border-2 md:border-3 border-cyan-400 text-cyan-100 px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-cyan-300 transition placeholder-blue-400/50"
                    />
                  </div>
                  <div>
                     <label class="block pixel-font text-xs md:text-sm text-cyan-400 mb-2 font-bold"
                      >{'>'} EMAIL_ADDRESS</label
                    >
                    <input
                      type="email"
                      placeholder="your@email.com"
                      class="w-full bg-blue-900/50 border-2 md:border-3 border-cyan-400 text-cyan-100 px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-cyan-300 transition placeholder-blue-400/50"
                    />
                  </div>
                  <div>
                     <label class="block pixel-font text-xs md:text-sm text-cyan-400 mb-2 font-bold"
                      >{'>'} MESSAGE_LOG</label
                    >
                    <textarea
                      placeholder="Type your message here..."
                      rows="4"
                      class="w-full bg-blue-900/50 border-2 md:border-3 border-cyan-400 text-cyan-100 px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-cyan-300 resize-none transition placeholder-blue-400/50"
                    ></textarea>
                  </div>
                  <button type="submit" class="w-full pixel-button py-4 text-xs font-bold"
                    >‚ñ∂ SEND_MESSAGE</button
                  >
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
