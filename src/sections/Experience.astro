---
import { education, experience, personalInfo, skills } from '../data/portfolio'
---

<section
  id="experience"
  class="min-h-screen bg-linear-to-br from-slate-950 via-blue-950 to-slate-950 py-20 px-4 relative flex items-center justify-center"
>
  <!-- Pixel grid background -->
  <div class="absolute inset-0 pixel-grid opacity-20"></div>

  <div class="max-w-7xl w-full relative z-10">
    <div
      class="bg-linear-to-br from-white to-blue-50 relative overflow-hidden rounded-2xl border-3 md:border-4 border-blue-500 notebook-shadow"
    >
      <!-- Spiral rings at top -->
      <div class="notebook-holes-top bg-blue-900 border-b border-blue-700">
        {[...Array(12)].map(() => <div class="spiral-ring" />)}
      </div>

      <!-- Blue margin line -->
      <div class="absolute left-20 top-16 bottom-0 notebook-line opacity-30"></div>

      <div class="grid-paper p-6 md:p-12 lg:p-16 pt-16 md:pt-24 relative">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Left: Quest Log / Experience -->
          <div class="lg:col-span-2 space-y-8">
            <!-- Experience -->
            <div>
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-10 h-10 bg-blue-500 flex items-center justify-center text-xl pixel-border"
                >
                  <span>üó∫Ô∏è</span>
                </div>
                <h2 class="pixel-font text-lg md:text-xl text-slate-900">QUEST_LOG.EXE</h2>
              </div>

              <div class="space-y-6">
                {
                  experience.map(item => (
                    <div
                      class={`border-l-4 pl-6 relative p-4 bg-white/50 notebook-shadow ${item.current ? 'border-blue-500' : 'border-slate-300'}`}
                    >
                      <div
                        class={`absolute -left-2.75 top-6 w-5 h-5 border-2 border-slate-950 ${item.current ? 'bg-blue-500 pulse-glow' : 'bg-slate-300'}`}
                      />

                      <div class="mb-3 flex items-center gap-3">
                        <div
                          class={`w-8 h-8 flex items-center justify-center text-base border-2 ${item.current ? 'bg-blue-100 border-blue-500 text-blue-600' : 'bg-slate-100 border-slate-300 text-slate-500'}`}
                        >
                          <span>{item.current ? 'üõ°Ô∏è' : 'üíª'}</span>
                        </div>
                        <span
                          class={`px-3 py-1 text-[10px] mono-font font-bold border-2 ${item.current ? 'bg-blue-500 text-white border-blue-700' : 'bg-slate-200 text-slate-600 border-slate-300'}`}
                        >
                          {item.current ? 'CURRENT' : 'COMPLETED'}
                        </span>
                      </div>

                      <h3 class="pixel-font text-sm md:text-base text-slate-900 mb-1">
                        {item.role}
                      </h3>
                      <p class="mono-font text-xs text-blue-600 mb-3 font-bold">
                        {'>'} {item.company} ‚Ä¢ {item.period}
                      </p>
                      <p class="text-slate-700 text-sm leading-relaxed mono-font">
                        {item.description}
                      </p>
                      <p class="text-blue-500 text-[10px] md:text-xs mt-3 mono-font font-bold">
                        {'>'} {item.skills}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>

            <!-- Education -->
            <div class="pt-8">
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-10 h-10 bg-purple-500 flex items-center justify-center text-xl pixel-border"
                >
                  <span>üéì</span>
                </div>
                <h2 class="pixel-font text-lg md:text-xl text-slate-900">EDUCATION_LOG.EXE</h2>
              </div>

              <div class="space-y-6">
                {
                  education.map((item, index) => (
                    <div
                      class={`border-l-4 pl-6 relative p-4 bg-white/50 notebook-shadow ${index === 0 ? 'border-purple-500' : 'border-purple-300'}`}
                    >
                      <div
                        class={`absolute -left-2.75 top-6 w-5 h-5 border-2 border-slate-950 ${index === 0 ? 'bg-purple-500' : 'bg-purple-300'}`}
                      />

                      <div class="mb-3 flex items-center gap-3">
                        <div class="w-8 h-8 bg-purple-100 border-2 border-purple-500 flex items-center justify-center text-base">
                          <span>{index === 0 ? 'üìö' : 'üìñ'}</span>
                        </div>
                        <span class="bg-purple-500 text-white px-3 py-1 text-[10px] mono-font font-bold border-2 border-purple-700">
                          {item.level}
                        </span>
                      </div>

                      <h3 class="pixel-font text-sm md:text-base text-slate-900 mb-1">
                        {item.degree}
                      </h3>
                      <p class="mono-font text-xs text-purple-600 mb-2 font-bold">
                        {'>'} {item.institution} ‚Ä¢ {item.period}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Right: Contact & Skills Column -->
          <div class="space-y-10">
            <!-- Skills & Certifications -->
            <div
              class="bg-white/80 p-6 md:p-8 border-3 md:border-4 border-emerald-500 notebook-shadow relative"
            >
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-10 h-10 bg-emerald-500 flex items-center justify-center text-xl pixel-border"
                >
                  <span>‚ö°</span>
                </div>
                <h2 class="pixel-font text-base text-slate-900">SKILLS.EXE</h2>
              </div>

              <div class="mb-8">
                <h3 class="pixel-font text-[10px] text-emerald-600 mb-4">{'>'} MAIN_SKILLS</h3>
                <div class="space-y-3">
                  {
                    skills.main.map(skill => (
                      <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-emerald-500" />
                        <span class="mono-font text-slate-700 text-xs font-bold">{skill}</span>
                      </div>
                    ))
                  }
                </div>
              </div>

              <div>
                <h3 class="pixel-font text-[10px] text-emerald-600 mb-4">{'>'} CERTIFICATIONS</h3>
                <div class="space-y-2">
                  {
                    skills.certifications.map(cert => (
                      <div class="bg-emerald-50 border-l-4 border-emerald-500 p-2">
                        <p class="mono-font text-emerald-700 text-[10px] font-bold">{cert}</p>
                      </div>
                    ))
                  }
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div
              id="contact"
              class="bg-white/80 p-6 md:p-8 border-3 md:border-4 border-blue-500 notebook-shadow relative"
            >
              <div class="flex items-center gap-3 mb-8">
                <div
                  class="w-10 h-10 bg-blue-500 flex items-center justify-center text-xl pixel-border"
                >
                  <span>üìù</span>
                </div>
                <h2 class="pixel-font text-base text-slate-900">CONTACT.EXE</h2>
              </div>

              <div class="space-y-3 mb-8 bg-blue-50 p-4 border-2 border-blue-200">
                <div class="flex items-center gap-3 text-blue-700 mono-font text-xs font-bold">
                  <span>üìß</span>
                  <span>{personalInfo.email}</span>
                </div>
                <div class="flex items-center gap-3 text-blue-700 mono-font text-xs font-bold">
                  <span>üìç</span>
                  <span>{personalInfo.location}</span>
                </div>
              </div>

              <form class="space-y-6">
                <div>
                  <label class="block pixel-font text-[10px] text-blue-800 mb-2 font-bold"
                    >{'>'} PLAYER_NAME</label
                  >
                  <input
                    type="text"
                    placeholder="Enter your name..."
                    class="w-full bg-white border-2 md:border-3 border-blue-400 text-black px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-blue-600 transition placeholder-slate-400"
                  />
                </div>
                <div>
                  <label class="block pixel-font text-[10px] text-blue-800 mb-2 font-bold"
                    >{'>'} EMAIL_ADDRESS</label
                  >
                  <input
                    type="email"
                    placeholder="your@email.com"
                    class="w-full bg-white border-2 md:border-3 border-blue-400 text-black px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-blue-600 transition placeholder-slate-400"
                  />
                </div>
                <div>
                  <label class="block pixel-font text-[10px] text-blue-800 mb-2 font-bold"
                    >{'>'} MESSAGE_LOG</label
                  >
                  <textarea
                    placeholder="Type your message here..."
                    rows="4"
                    class="w-full bg-white border-2 md:border-3 border-blue-400 text-black px-4 py-3 mono-font text-sm font-bold focus:outline-none focus:border-blue-600 resize-none transition placeholder-slate-400"
                  ></textarea>
                </div>
                <button type="submit" class="w-full pixel-button py-4 text-xs font-bold"
                  >‚ñ∂ SEND_MESSAGE</button
                >
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
